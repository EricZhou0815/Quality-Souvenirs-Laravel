@model IEnumerable<QualitySouvenirs.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    Address
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    Subtotal
                </th>
            <th>
                GST
            </th>
            <th>
                Grand Total
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
            <th>
                Order Status
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.Address,@item.City, @item.Country, @item.PostalCode
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.GST)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @if (item.Status == "Waiting")
                {
                    <a asp-action="ChangeOrderStatus" asp-route-id="@item.OrderId">Waiting</a>;
                }
                else
                {
                    <a asp-action="ChangeOrderStatus" asp-route-id="@item.OrderId">Shipped</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
